<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".splashActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/app_name"
                android:textColor="@color/Sunnyyellow100"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="226dp"
                android:src="@drawable/signup"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <!--  Title for the Registration Form  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="CREATE NEW ACCOUNT"
                    android:textColor="#333"
                    android:textSize="24sp"/>
                <!--  Mobile Number Input Field  -->
                <EditText
                    android:id="@+id/editTextMobilesignup"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Enter Email"
                    android:inputType="text"
                    android:padding="12dp"/>
                <!--  Password Input Field  -->
                <EditText
                    android:id="@+id/editTextPasswordignup"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:padding="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="Password policy: \n\t\t\t\tAt least one digit, \n\t\t\t\tone lower case, \n\t\t\t\tone upper case, \n\t\t\t\tone special character, \n\t\t\t\tno whitespace, \n\t\t\t\tand at least 8 characters long"
                    android:textColor="#F60202"
                    android:textSize="15sp"/>
                <!--  Registration Button  -->
                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/Sunnyyellow100"
                    android:text="Create Account"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>